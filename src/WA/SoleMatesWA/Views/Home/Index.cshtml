@{
    ViewData["Title"] = "SoleMates";
}

<!-- Image Carousel Section -->
<section id="image-carousel" class="carousel slide mt-0" data-bs-ride="carousel">
    <div class="container">
        <div class="carousel-inner">
            <!-- Carousel Item 1 -->
            <div class="carousel-item active">
                <img src="~/images/alex-perez-9E7vEfAcMDw-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 1">
            </div>
            <!-- Carousel Item 2 -->
            <div class="carousel-item">
                <img src="~/images/dickens-sikazwe-4ZzxFklU55s-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 2">
            </div>
            <!-- Carousel Item 3 -->
            <div class="carousel-item">
                <img src="~/images/mali-desha-2uGTx_SajL0-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 3">
            </div>
            <!-- Carousel Item 4 -->
            <div class="carousel-item">
                <img src="~/images/nathan-dumlao-zi5vRoAP3WY-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 4">
            </div>
        </div>
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#image-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#image-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Hero Section -->
<section class="hero" style="background-image: url('~/images/alex-perez-9E7vEfAcMDw-unsplash.jpg'); background-size: cover; color: white; padding: 100px 0;">
    <div class="container text-center" style="color: #8D477C">
        <h1 class="fw-bold display-3 animated fadeInUp">Dirty Sneakers Need Love Too</h1>
        <p class="lead animated fadeInUp delay-1s text-white-50">Your kicks are more than just a fashion statement; they're a reflection of your personality, style, and values.</p>
        <a asp-action="About" class="btn btn-custom animated fadeInUp delay-2s">Discover Our Story</a>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services text-center py-5">
    <div class="container">
        <h2 class="display-4 mb-4">Our Services</h2>
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card bi-shadows shadow-sm mb-4 bg-dark text-white-50" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="bi bi-basket2 feature-icon display-3 text-primary"></i>
                        <h4 class="card-title mt-3 text-white">Basic Clean</h4>
                        <p class="card-text text-white-50">A thorough cleaning of the exterior and interior of the sneaker, including removal of dirt, dust, and stains.</p>
                        <h5 class="text-white mt-3 fw-bold" style="font-size: 2.5rem;">
                            R49.99
                        </h5>
                        <label><sup>(Including VAT&#42;)</sup></label>
                        <a href="#contact" class="btn btn-outline-primary text-white mt-3">Get This Service</a>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card bi-shadows shadow-sm mb-4 bg-dark text-white-50" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="fa fa-shoe-prints feature-icon display-3 text-success"></i>
                        <h4 class="card-title mt-3 text-white">Deep Clean</h4>
                        <p class="card-text text-white-50">An intensive cleaning service that includes Basic Clean, plus deodorizing and conditioning for that extra freshness.</p>
                        <h5 class="text-white mt-3 fw-bold text-success" style="font-size: 2.5rem;">
                            R89.99
                        </h5>
                        <label><sup>(Including VAT&#42;)</sup></label>
                        <a href="#contact" class="btn btn-outline-success text-white mt-3">Get This Service</a>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card bi-shadows shadow-sm mb-4 bg-dark text-white-50" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="fa fa-tshirt feature-icon display-3 text-danger"></i>
                        <h4 class="card-title mt-3 text-white">Premium Clean</h4>
                        <p class="card-text text-white-50">Our top-tier cleaning service that includes Deep Clean, plus specialized stain removal and protection treatment to keep your sneakers in pristine condition.</p>
                        <h5 class="text-white mt-3 fw-bold" style="font-size: 2.5rem;">
                            R199.99
                        </h5>
                        <label><sup>(Including VAT&#42;)</sup></label>
                        <a href="#contact" class="btn btn-outline-danger text-white mt-3">Get This Service</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

