@{
    ViewData["Title"] = "Home Page";
}

<!-- Image Carousel Section -->
<section id="image-carousel" class="carousel slide mt-0" data-bs-ride="carousel">
    <div class="container">
        <div class="carousel-inner">
            <!-- Carousel Item 1 -->
            <div class="carousel-item active">
                <img src="~/images/alex-perez-9E7vEfAcMDw-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 1">
            </div>
            <!-- Carousel Item 2 -->
            <div class="carousel-item">
                <img src="~/images/dickens-sikazwe-4ZzxFklU55s-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 2">
            </div>
            <!-- Carousel Item 3 -->
            <div class="carousel-item">
                <img src="~/images/mali-desha-2uGTx_SajL0-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 3">
            </div>
            <!-- Carousel Item 4 -->
            <div class="carousel-item">
                <img src="~/images/nathan-dumlao-zi5vRoAP3WY-unsplash.jpg" class="d-block w-100 carousel-image" alt="Sneaker Image 4">
            </div>
        </div>
        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#image-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#image-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>

<!-- Hero Section -->
<section class="hero" style="background-image: url('~/images/alex-perez-9E7vEfAcMDw-unsplash.jpg'); background-size: cover; color: white; padding: 100px 0;">
    <div class="container text-center" style="color: #8D477C">
        <h1 class="fw-bold display-3 animated fadeInUp">Dirty Sneakers Need Love Too</h1>
        <p class="lead animated fadeInUp delay-1s">Your kicks are more than just a fashion statement; they're a reflection of your personality, style, and values.</p>
        <a href="#about" class="btn btn-custom animated fadeInUp delay-2s">Discover Our Story</a>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about text-center py-5">
    <div class="container" style="color: #8D477C">
        <h2 class="display-4 mb-4">About Us</h2>
        <p class="lead mb-4">At SoleMates, we're obsessed with sneakers. We believe that every pair tells a story, and it's our mission to keep your story fresh and vibrant.</p>
        <p class="mb-4">Our sneaker cleaning services are designed with love and care, ensuring your kicks look and feel like new—ready to turn heads wherever you go!</p>
        <div class="row">
            <div class="col-md-4">
                <img src="~/images/dickens-sikazwe-4ZzxFklU55s-unsplash.jpg" class="img-fluid rounded shadow" alt="SoleMates Clean Sneakers">
            </div>
            <div class="col-md-4">
                <img src="~/images/mali-desha-2uGTx_SajL0-unsplash.jpg" class="img-fluid rounded shadow" alt="SoleMates Clean Sneakers">
            </div>
            <div class="col-md-4">
                <img src="~/images/nathan-dumlao-zi5vRoAP3WY-unsplash.jpg" class="img-fluid rounded shadow" alt="SoleMates Clean Sneakers">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section id="services" class="services text-center py-5">
    <div class="container">
        <h2 class="display-4 mb-4 text-white">Our Services</h2>
        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-4" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="bi bi-basket2 feature-icon display-3 text-primary"></i>
                        <h4 class="card-title mt-3">Basic Clean</h4>
                        <p class="card-text">A thorough cleaning of the exterior and interior of the sneaker, including removal of dirt, dust, and stains.</p>
                        <a href="#contact" class="btn btn-outline-primary">Get This Service</a>
                    </div>
                </div>
            </div>
            <!-- Card 2 -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-4" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="fa fa-shoe-prints feature-icon display-3 text-success"></i>
                        <h4 class="card-title mt-3">Deep Clean</h4>
                        <p class="card-text">An intensive cleaning service that includes Basic Clean, plus deodorizing and conditioning for that extra freshness.</p>
                        <a href="#contact" class="btn btn-outline-success">Get This Service</a>
                    </div>
                </div>
            </div>
            <!-- Card 3 -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-4" style="min-height: 350px; background-color: white;">
                    <div class="card-body text-center">
                        <i class="fa fa-tshirt feature-icon display-3 text-danger"></i>
                        <h4 class="card-title mt-3">Premium Clean</h4>
                        <p class="card-text">Our top-tier cleaning service that includes Deep Clean, plus specialized stain removal and protection treatment to keep your sneakers in pristine condition.</p>
                        <a href="#contact" class="btn btn-outline-danger">Get This Service</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Testimonials Section -->
<section id="testimonials" class="testimonials text-center py-5 text-white">
    <div class="container">
        <h2 class="display-4 mb-4">What Our Clients Say</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="testimonial-box shadow p-4">
                    <img src="~/images/logo.jpg" alt="Jane's Image" class="testimonial-img mb-3">
                    <p class="lead">"SoleMates brought my old sneakers back to life! The deep clean made them look brand new, and the service was so professional." – Jane</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="testimonial-box shadow p-4">
                    <img src="~/images/logo.jpg" alt="Mark's Image" class="testimonial-img mb-3">
                    <p class="lead">"I never realized how dirty my sneakers were until SoleMates worked their magic! I’m definitely a returning customer." – Mark</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="testimonial-box shadow p-4">
                    <img src="~/images/logo.jpg" alt="Sarah's Image" class="testimonial-img mb-3">
                    <p class="lead">"Amazing service, quick turnaround, and my sneakers have never looked better!" – Sarah</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact text-center py-5">
    <div class="container" style="color: #8D477C">
        <h2 class="display-4 mb-4">Get In Touch</h2>
        <p class="lead mb-4">Ready to give your sneakers the love they deserve? Reach out to us today to schedule your cleaning service.</p>
        <a href="mailto:contact@solemates.com" class="btn btn-custom btn-lg">Contact Us</a>
    </div>
</section>
