<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoleMates</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoleMatesWA.styles.css" asp-append-version="true" />
    <style>
        /* Make sure the body and html take full height */
        html, body {
            height: 100%;
            margin: 0;
        }

        /* Main container takes full height */
        .content-wrapper {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        /* Push footer to the bottom if content is insufficient */
        .footer {
            margin-top: auto; /* This ensures the footer stays at the bottom */
            background-color: #343a40; /* Optional: Adjust footer background */
            color: white; /* Optional: Adjust footer text color */
            padding: 20px 0; /* Optional: Adjust footer padding */
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <!-- Logo -->
                <a class="navbar-brand text-white fw-bold" asp-action="Index">
                    <img src="~/images/logo.jpg" width="50px" height="50px" />
                </a>

                <!-- Centered Brand Name -->
                <div class="mx-auto text-white text-center" style="font-family: 'Cursive', sans-serif; font-size: 1.5rem;">
                    Sole Mates
                </div>

                <!-- Right Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-white" href="#services">Services</a></li>
                    </ul>
                </div>
            </div>
        </nav>


    </header>

    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer>
        <footer style="background-color: #8D477C; padding: 20px 0; text-align: center; font-size: 14px;" class="text-light">
            <div>
                <p>&copy; 2025 SoleMates. All Rights Reserved.</p>
                <p>
                    <a asp-action="Privacy" class="text-light" style="text-decoration: none; margin-right: 20px;">Privacy Policy</a>
                    <a asp-action="Privacy" class="text-light" asp-fragment="Test" style="text-decoration: none;">Terms of Service</a>
                </p>
            </div>
            <div>
                <p>Follow Us:</p>
                <a href="https://facebook.com/solemates" style="text-decoration: none; margin-right: 10px;" target="_blank">
                    <i class="fab fa-facebook text-light" style="margin-right: 5px;"></i> <span class="text-light">Facebook</span>
                </a>
                <a href="https://twitter.com/solemates" style="text-decoration: none; margin-right: 10px;" target="_blank">
                    <i class="fab fa-twitter text-light" style="margin-right: 5px;"></i> <span class="text-light">Twitter</span>
                </a>
                <a href="https://instagram.com/solemates" style="text-decoration: none;" target="_blank">
                    <i class="fab fa-instagram text-light" style="margin-right: 5px;"></i> <span class="text-light">Instagram</span>
                </a>
            </div>

        </footer>

    </footer>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/font-awesome/js/all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
